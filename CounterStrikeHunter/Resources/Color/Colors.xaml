<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="UI_Gradient" StartPoint="0.5,0.0" EndPoint="0,2">
        <GradientStop Offset="0" Color="#4ea0fd" />
        <GradientStop Offset="0.5" Color="#0077ff" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="UI_Error_Gradient" StartPoint="0.5,0.0" EndPoint="0,2">
        <GradientStop Offset="0" Color="#ff4e4e" />
        <GradientStop Offset="0.5" Color="#ff0000" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="UI_Success_Gradient" StartPoint="0.5,0.0" EndPoint="0,2">
        <GradientStop Offset="0" Color="#4caf50" />
        <GradientStop Offset="0.5" Color="#1b5e20" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="UI_Gradient_Zero_Opacity" Opacity="0" StartPoint="0.5,0.0" EndPoint="0,2">
        <GradientStop Offset="0" Color="#4ea0fd" />
        <GradientStop Offset="0.5" Color="#0077ff" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="UI_Body_Background" Color="#090909" />
    <SolidColorBrush x:Key="UI_Header_Background" Color="#050505" />

    <SolidColorBrush x:Key="UI_Dialog_Body_Background" Color="#070707" />
    <SolidColorBrush x:Key="UI_Dialog_Header_Background" Color="#050505" />

    <SolidColorBrush x:Key="UI_Body_Border_Brush" Color="#FF1D1D1D" />

</ResourceDictionary>