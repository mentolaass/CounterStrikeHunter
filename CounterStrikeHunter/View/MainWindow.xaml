                            Margin="0,20,20,20"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            NavigationUIVisibility="Hidden"
                            Opacity="0">
                            <Frame.Style>
                                <Style TargetType="Frame">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsExtendingWindowDimensions}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ThicknessAnimation
                                                            FillBehavior="HoldEnd"
                                                            Storyboard.TargetProperty="Margin"
                                                            From="0,20,20,20"
                                                            To="180,20,20,20"
                                                            Duration="00:00:00.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ThicknessAnimation
                                                            FillBehavior="HoldEnd"
                                                            Storyboard.TargetProperty="Margin"
                                                            From="180,20,20,20"
                                                            To="0,20,20,20"
                                                            Duration="00:00:00.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Frame.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Navigated">
                                    <i:ControlStoryboardAction>
                                        <i:ControlStoryboardAction.Storyboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    FillBehavior="HoldEnd"
                                                    Storyboard.TargetName="MainFrame"
                                                    Storyboard.TargetProperty="Opacity"
                                                    From="0"
                                                    To="1"
                                                    Duration="00:00:00.2" />
                                            </Storyboard>
                                        </i:ControlStoryboardAction.Storyboard>
                                    </i:ControlStoryboardAction>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="Navigating">
                                    <i:ControlStoryboardAction>
                                        <i:ControlStoryboardAction.Storyboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    FillBehavior="HoldEnd"
                                                    Storyboard.TargetName="MainFrame"
                                                    Storyboard.TargetProperty="Opacity"
                                                    From="1"
                                                    To="0"
                                                    Duration="00:00:00.2" />
                                            </Storyboard>
                                        </i:ControlStoryboardAction.Storyboard>
                                    </i:ControlStoryboardAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Frame>
                    </Grid>

