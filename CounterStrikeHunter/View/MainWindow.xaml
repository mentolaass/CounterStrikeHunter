            x:Name="UI_Header"
            Grid.Row="0"
            Background="{StaticResource UI_Header_Background}"
            BorderBrush="{StaticResource UI_Body_Border_Brush}"
            BorderThickness="3,3,3,0"
            CornerRadius="9, 9, 0, 0">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown">
                    <i:InvokeCommandAction Command="{Binding MaximizeWithHeader}" PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="232*" />
                    <ColumnDefinition Width="100" MaxWidth="100" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Margin="20,0,0,0"
                    Padding="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="White">
                    <Run Text="Counter Strike" />
                    <Run Foreground="{StaticResource UI_Gradient}" Text="Hunter" />
                </TextBlock>

